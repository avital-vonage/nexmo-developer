<div class="Vlt-dropdown">
  <button class="Vlt-dropdown__btn Vlt-btn--app"><%= t('.any_language') %></button>
  <div class="Vlt-dropdown__panel">
    <div class="Vlt-dropdown__panel__content">
      <ul>
        <% Nexmo::Markdown::CodeLanguage.languages.reject { |l| l.key == 'dotnet' }.each do |lang| %>
          <li>
            <a
              class="Vlt-dropdown__link"
              href="<%= url_for(controller: controller_name, action: action_name, product: params[:product], code_language: lang.key)%>"
              >
              <svg class="Vlt-dropdown__link__icon" style="height: 20px; width: 20px;" ><use xlink:href="/assets/images/brands/<%= lang.icon %>.svg#<%= lang.icon %>"></use></svg>
              <div class="Vlt-dropdown__divider"><%= lang.label %><hr class="hr--short"></hr></div>
            </a>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
